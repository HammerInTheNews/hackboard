<h1>New Post</h1>

<%= form_for @post do |f| %>
   <div>
	   <%= f.label :description %>
	   <%= f.text_area :description %>
   </div>

   <div>
	   <%= f.label :link %>
	   <%= f.text_field :link %>
   </div>

   <div>
   	   <%= f.label :name %>
   	   <%= f.text_field :name %>
   </div>

   <%= f.submit %>
<% end %>